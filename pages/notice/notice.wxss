@import '/assets/iconfont.wxss';

page {
    padding: 28rpx;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}

.title {
    font-size: 48rpx;
    font-weight: 500;
    margin-bottom: 16px;
    display: block;
    text-align: center;
}

.info {
    text-align: center;
    display: block;
    font-size: 36rpx;
    font-weight: 500;
    display: flex;
    justify-content: space-around;
}

.content {
    line-height: 1.65;
    text-align: justify;
    text-indent: 2em;
    display: block;
    margin-top: 24rpx;
    padding-top: 24rpx;
    border-top: 1rpx solid #e5e5e5;
}

.iconfont {
    margin-right: 8rpx;
}
