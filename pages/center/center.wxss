@import '/assets/iconfont.wxss';
@import '/assets/card.wxss';
@import '/assets/base64img.wxss';

.header {
    position: relative;
    display: flex;
    align-items: center;
    background-size: cover;
    background-position: center;
    height: 400rpx;
    width: 100%;
    border-radius: 0 0 20rpx 20rpx;
    overflow: hidden;
}

/* 未登录的居中布局 */
.nologin {
    display: contents;
}

.background_image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    filter: blur(3px);
}

.avatar {
    width: 128rpx;
    height: 128rpx;
    border-radius: 50%;
    position: relative;
    margin-left: 28rpx;
    vertical-align: middle;
}

.nickName {
    margin-left: 20rpx;
    font-weight: bold;
    position: relative;
    font-size: 50rpx;
    color: #fff;
    vertical-align: middle;
}

.settings {
    width: auto !important;
    height: auto !important;
    padding: 0;
    position: fixed;
    top: 20rpx;
    right: 36rpx;
    background-color: transparent;
    background-repeat: no-repeat;
    background-position: center;
    background-size: 50rpx;
}
.settings > .iconfont {
    font-size: 48rpx;
}
.info_view {
    /* display: grid;
    grid-template-columns: 1fr 1fr; */
}

/* 状态字体颜色 */
.normal {
    color: #09b060;
}

.canceled {
    color: #ff5722;
}

.frozen,
.loss {
    color: #ffb800;
}

.watermark-icon {
    font-size: 100rpx;
    color: #09b060;
    position: relative;
}

.button {
    width: auto !important;
}

/* 刷新按钮 */
.reload-icon {
    font-weight: bold;
}

.relaod-btn {
    display: inline;
    background-color: #09b060;
    color: white;
    margin: 0;
    padding: 0;
    border-radius: 40rpx;
    text-align: center;
    vertical-align: baseline;
    display: flex;
}

.relaod-btn > text {
    color: white !important;
}

.info_view_header {
    display: flex;
    align-items: center;
    height: auto;
}

.flex-right {
    margin-left: auto;
}
