@import '/assets/iconfont/iconfont.wxss';
@import '/assets/card.wxss';

.header {
    position: relative;
    display: flex;
    align-items: center;
    background-size: cover;
    background-position: center;
    height: 400rpx;
    width: 100%;
    border-radius: 0 0 20rpx 20rpx;
    overflow: hidden;
}

/* 未登录的居中布局 */
.nologin {
    display: contents;
}

.background_image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    filter: blur(3px);
}

.avatar {
    width: 128rpx;
    height: 128rpx;
    border-radius: 50%;
    position: relative;
    margin-left: 20rpx;
    vertical-align: middle;
}

.nickName {
    margin-left: 20rpx;
    font-weight: bold;
    position: relative;
    font-size: 50rpx;
    color: #09b060;
    vertical-align: middle;
}

.settings {
    width: auto !important;
    height: auto !important;
    padding: 0;
    position: fixed;
    top: 20rpx;
    right: 36rpx;
    background-color: transparent;
    background-repeat: no-repeat;
    background-position: center;
    background-size: 50rpx;
}
.settings > .iconfont {
    font-size: 48rpx;
}
.info_view {
    display: grid;
    grid-template-columns: 1fr 1fr;
}
