@import '/assets/iconfont.wxss';

page {
    padding: 28rpx;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}
/* 卡片 */
.card {
    background-color: #1578f9;
    aspect-ratio: 16/9;
    border-radius: 28rpx;

    background-image: linear-gradient(to right, #1578f9, #0391fd);
    background-size: cover;
    overflow: hidden;
    box-sizing: border-box;

    background-image: url(data:image/svg+xml;base64,);
    background-size: 40%;
    background-repeat: no-repeat;
    background-position: 116% 190%;

    box-shadow: 4rpx 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.card-header {
    height: 78rpx;
    width: 100%;
    background-color: rgba(255, 255, 255, 0.1);
    padding: 10rpx 28rpx;
    box-sizing: border-box;
}

.card-header-left,
.card-header-right {
    display: inline-block;
    height: 100%;
    /* background-color: aquamarine; */
}

.card-header-left > image {
    display: inline-block;
    height: 100%;
    width: 200rpx;
    filter: drop-shadow(4rpx 4rpx 4rpx rgba(0, 0, 0, 0.15));
}

.card-header-right {
    float: right;
}

.card-header-right > text {
    vertical-align: -webkit-baseline-middle;
    color: white;
    text-shadow: 4rpx 4rpx 4rpx rgba(0, 0, 0, 0.15);
}

/* card-body */
.card-body {
    height: 100px;
    padding: 10rpx 28rpx;
    line-height: 2;
}

.card-body-balance-text {
    display: block;
    font-size: 32rpx;
    color: rgba(255, 255, 255, 0.6);
}

.card-body-balance-num {
    display: block;
    font-size: 56rpx;
    color: #fff;
}

/* 功能 */
.operation {
    /* height: 100px; */
    background-color: #fff;
    border-radius: 28rpx;
    margin-top: 28rpx;
    box-shadow: 4rpx 4rpx 10rpx rgba(0, 0, 0, 0.1);
    overflow: hidden;
    padding: 16rpx;
    display: flex;
    justify-content: space-evenly;
}

.operation-item {
    display: inline-block;
    aspect-ratio: 1;
    display: grid;
    justify-items: center;
    justify-content: center;
    margin: 0;
    display: inline;
    font-size: 0;
}

.operation-item-btn {
    display: inline-block;
    height: auto !important;
    width: auto !important;
    color: #1578f9;
}

.operation-item .iconfont {
    font-size: 56rpx;
    display: block;
}
