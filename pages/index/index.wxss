page {
    padding: 28rpx;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}

.logo {
    height: 200rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: auto;
}

.weui-panel__hd {
    font-weight: bold;
}
.weui-panel {
    background-color: transparent;
}

.weui-media-box {
    padding: 16rpx 32rpx;
}

.iconfont {
    margin-right: 16rpx;
}


.weui-media-box__title {
    display: inline-block;
}

.datetime {
    float: right;
    /* font-size: 28rpx; */
    color: var(--weui-FG-2);
}