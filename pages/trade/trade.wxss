/* pages/trade/trade.wxss */
@import '/assets/weui.wxss';
@import '/assets/iconfont.wxss';

page {
    /* padding: 28rpx; */
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}

scroll-view {
    height: calc(100vh - 300rpx);
}

text {
    vertical-align: middle;
}

.iconfont {
    font-size: 26rpx;
    vertical-align: middle;
}

.level1-icon {
    margin-right: 18rpx;
}

.level1-in {
    /* color: #00965e; */
}

.green {
    color: #00965e;
}

.date {
    margin-left: 18rpx;
}

.amount {
    min-width: 110rpx;
}

/* 无数据文字 */
.no-data {
    text-align: center;
    line-height: 4;
}

/* 分页 */
.pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 10px;
    position: sticky;
    bottom: 28rpx;
}

.prev-btn,
.next-btn {
    padding: 5px 10px;
    /* background-color: #ccc; */
    color: #fff;
    border-radius: 5px;
    margin: 0 5px;
}

.page-info {
    font-size: 14px;
}
