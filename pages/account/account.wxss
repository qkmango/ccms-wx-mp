/* pages/account/account.wxss */

@import '/assets/weui/weui';

.logined,
.toLogin {
    position: relative;
    display: flex;
    /* justify-content: center; */
    align-items: center;
    background-size: cover;
    background-position: center;
    height: 400rpx;
    /* padding: 20rpx; */
    width: 100%;
    border-radius: 0 0 20rpx 20rpx;
    background-color: blanchedalmond;
    overflow: hidden;
}

.background_image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

form {
    width: 100%;
    height: 100%;
}

.avatar {
    width: 128rpx;
    height: 128rpx;
    border-radius: 50%;
    position: relative;
    margin-left: 20rpx;
}

.nickName {
    margin-left: 20rpx;
    font-weight: bold;
    position: relative;
}

.settings {
    width: 50rpx !important;
    height: 50rpx !important;
    padding: 0;
    position: fixed;
    top: 20rpx;
    right: 20rpx;
    background-color: transparent;
    background-repeat: no-repeat;
    background-position: center;
    background-size: 50rpx;
}

.settings > image {
    width: 100%;
    height: 100%;
}

.weui-cell > .weui-cell__hd {
    width: 130rpx;
}
