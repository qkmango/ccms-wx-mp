@import '/assets/iconfont/iconfont.wxss';
@import '/assets/card.wxss';

/* ============== */
.card_info_view {
    margin: 20rpx;
    padding: 20rpx;

    border-radius: 20rpx;
    margin: 28rpx;
    overflow: hidden;
    box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.1);
    background-color: #fff;
}

.dept_value {
    text-align: left;
    line-height: normal;
}
.dept_value > text:not(:first-child)::before {
    content: ' > ';
    vertical-align: middle;
}