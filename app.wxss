/**app.wxss**/

page {
    width: 100%;
    height: 100%;
    background-color: #f3f9f7;
}

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 200rpx 0;
    box-sizing: border-box;
}

/* 按钮样式 */
.button {
    border-radius: 40rpx;
    /* background-color: #09b060; */
}

.button.max-width {
    width: 100%;
}

/* 磨砂按钮 */
.dull-polish-btn {
    backdrop-filter: blur(10px);
    background-color: rgb(242 242 242 / 0.2) !important;
    border-radius: 40rpx;
}

/* 绿色磨砂按钮 */
.dull-polish-green-btn {
    color: #fff;
    backdrop-filter: blur(10px);
    background-color: rgba(9, 176, 95, 0.5) !important;
    border-radius: 40rpx;
}

/* 默认view */
.default-view {
    margin: 20rpx;
    padding: 20rpx;
}

/* 背景图片 */
.bg-image {
    position: fixed;
    width: 100%;
    height: 100%;
    z-index: -1;
}

